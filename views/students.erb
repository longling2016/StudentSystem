<h1> Students </h1>
<li><a href="/students/new">Create a new student</a></li>
<% if @students.any? %>
    <ul>
      <% @students.each do |student| %>
          <li><a href="/students/#{student.studentID}">#{student.studentID}: #{student.firstname} #{student.lastname}</a></li>
      <% end %>
    </ul>
<% else %>
    <p> No student has been created yet! </p>
<% end %>

